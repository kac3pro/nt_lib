{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug test (CMake target)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": ["--gtest_filter=${input:testFilter}"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: build"
    },

    {
      "name": "Debug test (explicit exe)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/test_runner",
      "args": ["--gtest_filter=${input:testFilter}"],
      "cwd": "${workspaceFolder}/build",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    },

    {
      "name": "Debug with ctest (follow child)",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/bin/ctest",
      "args": ["-R", "${input:testFilter}", "-V"],
      "cwd": "${workspaceFolder}/build",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Follow forked child (ctest launches the test as a child)",
          "text": "set follow-fork-mode child",
          "ignoreFailures": true
        }
      ]
    }
  ],

  "inputs": [
    {
      "id": "testFilter",
      "type": "promptString",
      "description": "GoogleTest filter or ctest regex (e.g. MySuite.MyTest or MySuite.*). Use * for all tests.",
      "default": "*"
    }
  ]
}