{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Selected CMake Target",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ],
      "preLaunchTask": "cmake: build"
    },

    {
      "name": "Debug: Run single test executable (nt_test)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/nt_test/nt_test", 
      "args": ["--gtest_filter=*"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "cmake: build"
    }
  ]
}