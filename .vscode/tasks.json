{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "git: init submodules",
      "type": "shell",
      "command": "git submodule update --init --recursive",
      "problemMatcher": []
    },
    {
      "label": "cmake: configure",
      "type": "shell",
      "command": "cmake -S ${workspaceFolder} -B ${workspaceFolder}/build -G Ninja -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DCMAKE_BUILD_TYPE=Debug",
      "group": { "kind": "build", "isDefault": false }
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake --build ${workspaceFolder}/build -j",
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": ["cmake: configure"]
    },
    {
      "label": "ctest: run all",
      "type": "shell",
      "command": "ctest --test-dir ${workspaceFolder}/build --output-on-failure -j 2",
      "group": "test",
      "dependsOn": ["cmake: build"]
    }
  ]
}